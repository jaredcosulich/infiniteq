.header.col-sm-12
  .col-sm-4
    %h1= link_to('InfiniteQ', root_path, class: 'title')

  .links.col-sm-3.col-sm-offset-5
    - if user_signed_in?
      = link_to truncate(current_user.name || current_user.email, length: 18)
      = link_to "Log Out", destroy_user_session_path, :method => :delete
    - else
      = link_to "Log In", new_user_session_path
      = link_to "Register", new_user_registration_path
