.question.col-sm-12
  .vote.col-sm-1
    = form_for [question, question.question_votes.new(positive: true)], remote: true, class: 'up-vote' do |f|
      = f.hidden_field :positive
      %h2= button_tag fa_icon('chevron-circle-up')
    .down-vote
    = form_for [question, question.question_votes.new(positive: false)], remote: true, class: 'down-vote' do |f|
      = f.hidden_field :positive
      %h2= button_tag fa_icon('chevron-circle-down')
    .vote-total
      %h3
        .small= (question.vote_total / 10.0)
  .col-sm-10
    %h4
      %span.title Q:
      = link_to(question.text, question)
