.question.col-sm-12
  .vote.col-sm-1
    .up-vote
      %h2= fa_icon('chevron-circle-up')
    .down-vote
      %h2= fa_icon('chevron-circle-down')
    .vote-total
      %h3
        .small= (question.vote_total / 10.0)
  .col-sm-10
    %h4
      %span.title Q:
      = link_to(question.text, question)
