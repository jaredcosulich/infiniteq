.col-sm-6
  %h3 Resend Confirmation Instructions

  %br

  = form_for(resource, as: resource_name, url: confirmation_path(resource_name), html: { method: :post }) do |f|
    = devise_error_messages!

    .form-group
      %h5
        = f.label :email
        = f.text_field :email, value: (resource.pending_reconfirmation? ? resource.unconfirmed_email : resource.email), class: 'form-control', autofocus: true

    %br

    .form-group
      = f.submit 'Resend Confirmation Instructions', class: 'btn btn-default'

    %br

    .form-group
      = render 'devise/shared/links'
