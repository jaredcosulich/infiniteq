.col-sm-6
  %h3 Register An Account

  %br

  = form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
    = devise_error_messages!

    .form-group
      %h5
        = f.label :name, 'Display Name'
        = f.text_field :name, class: 'form-control', autofocus: true
      .small
        Note: Your display name will be shown on leaderboards, so if you want credit for your activity on a topic you may want to use your real name.

    %br

    .form-group
      %h5
        = f.label :email
        = f.text_field :email, class: 'form-control'

    %br

    .form-group
      %h5
        = f.label :password
        - if @minimum_password_length
          %em
            (#{@minimum_password_length} characters minimum)
        = f.password_field :password, class: 'form-control', autocomplete: "off"

    %br

    .form-group
      %h5
        = f.label :password_confirmation
        = f.password_field :password_confirmation, class: 'form-control', autocomplete: "off"

    %br

    .form-group
      = f.submit 'Register', class: 'btn btn-default'

    %br

    .form-group
      = render 'devise/shared/links'
