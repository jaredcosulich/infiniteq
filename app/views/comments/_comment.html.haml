.comment
  .small
    .pull-right
      = link_to fa_icon('reply'), new_comment_path(comment: {parent_comment_id: comment.id}), title: 'Reply To Comment'
      - if user_signed_in? && comment.user == current_user
        &nbsp; &nbsp;
        = link_to fa_icon('pencil-square-o'), edit_comment_path(comment), title: 'Edit Comment'
        &nbsp; &nbsp;
        = link_to fa_icon('trash'), comment_path(comment), data: {confirm: 'Are you sure you want to delete this comment?'}, method: :delete, title: 'Delete Comment'
    = comment.text
  = render comment.child_comments
