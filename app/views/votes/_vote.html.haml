- new_object_vote = object.public_send("#{object.class.to_s.downcase}_votes").new(positive: positive)
= form_for [object, new_object_vote], remote: true, class: (positive ? 'up-vote' : 'down-vote') do |f|
  = f.hidden_field :positive
  %h2= button_tag fa_icon("chevron-circle-#{positive ? 'up' : 'down'}")
