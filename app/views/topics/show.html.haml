.col-sm-12
  - if notice.present?
    %p#notice= notice

  = render 'topics/topic_path', topic: @topic
  .small.subtopics
    %strong Subtopics:
    &nbsp;
    - @topic.subtopics.most_questions.each do |subtopic|
      = link_to("#{subtopic.title} (#{subtopic.recursive_questions_count})", subtopic)
      &nbsp;&nbsp;
    = link_to "#{fa_icon('plus-circle')} New Subtopic".html_safe, new_topic_path(parent_topic_id: @topic.id)

  %h3.topic-title
    = @topic.title
    .description.small= markdown(@topic.description)

  .ask_a_question
    %h4 Ask A Question
    = form_for @question, html: {class: 'form-inline'} do |f|
      .form-group
        = f.text_field :text, class: 'form-control', placeholder: "Your Question about #{@topic.title}"
        = f.hidden_field :topic_id
        = f.submit 'Ask', class: 'btn btn-default'

  %ul.nav.nav-tabs{role: 'tablist'}
    %li.active{role: 'presentation'}
      %a{href: '#verified', role: 'tab', aria: {controls: 'verified'}, data: {toggle: 'tab'}}
        Questions
        = "(#{@topic.all_questions.verified.count})"
    %li{role: 'presentation'}
      %a{href: '#unanswered', role: 'tab', aria: {controls: 'unanswered'}, data: {toggle: 'tab'}}
        Unanswered
        = "(#{@topic.all_questions.verified.unanswered.count})"
    %li{role: 'presentation'}
      %a{href: '#unverified', role: 'tab', aria: {controls: 'unverified'}, data: {toggle: 'tab'}}
        Unverified
        = "(#{@topic.all_questions.unverified.count})"
    %li{role: 'presentation'}
      %a{href: '#flagged', role: 'tab', aria: {controls: 'flagged'}, data: {toggle: 'tab'}}
        Flagged
        = "(#{@topic.all_questions.flagged.count})"
    %li{role: 'presentation'}
      %a{href: '#suspect', role: 'tab', aria: {controls: 'suspect'}, data: {toggle: 'tab'}}
        Suspect
        = "(#{@topic.all_questions.suspect.count})"

  .questions.tab-content
    .tab-pane.active{id: 'verified', role: 'tabpanel'}
      - @topic.all_questions.verified.each do |question|
        .question
          %strong.title Q:
          = link_to(question.text, question)
      - if @topic.all_questions.verified.empty?
        %br
        %h5 No questions have been verified yet.
    .tab-pane{id: 'unanswered', role: 'tabpanel'}
      - @topic.all_questions.verified.unanswered.each do |question|
        .question
          %strong.title Q:
          = link_to(question.text, question)
      - if @topic.all_questions.verified.unanswered.empty?
        %br
        %h5 There are currently no unanswered verified questions.
    .tab-pane{id: 'unverified', role: 'tabpanel'}
      - @topic.all_questions.unverified.each do |question|
        .question
          %strong.title Q:
          = link_to(question.text, question)
      - if @topic.all_questions.unverified.empty?
        %br
        %h5 There are currently no unverified questions.
    .tab-pane{id: 'flagged', role: 'tabpanel'}
      - @topic.all_questions.flagged.each do |question|
        .question
          %strong.title Q:
          = link_to(question.text, question)
      - if @topic.all_questions.flagged.empty?
        %br
        %h5 There are currently no flagged questions.
    .tab-pane{id: 'suspect', role: 'tabpanel'}
      - @topic.all_questions.suspect.each do |question|
        .question
          %strong.title Q:
          = link_to(question.text, question)
      - if @topic.all_questions.suspect.empty?
        %br
        %h5 There are currently no suspect questions.
