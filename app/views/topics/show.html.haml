.col-sm-12
  - if notice.present?
    %p#notice= notice

  = render 'topics/topic_path', topic: @topic

  %h3.topic-title= @topic.title

  %h6= markdown(@topic.description)

  .ask_a_question
    %h4 Ask A Question
    = form_for @question, html: {class: 'form-inline'} do |f|
      .form-group
        = f.text_field :text, class: 'form-control', placeholder: "Your Question about #{@topic.title}"
        = f.hidden_field :topic_id
        = f.submit 'Ask', class: 'btn btn-default'

  %p.subtopics
    %strong Subtopics:
    - @topic.subtopics.each do |subtopic|
      = "#{link_to(subtopic.title, subtopic)}, ".html_safe
    = link_to "#{fa_icon('plus-circle')} Create A New Subtopic".html_safe, new_topic_path(parent_topic_id: @topic.id)

  %br

  %ul.nav.nav-tabs
    %li.active{role: 'verified'}
      %a{href: '#'}
        Questions
        = "(#{Question.verified.count})"
    %li{role: 'unanswered'}
      %a{href: '#'}
        Unanswered
        = "(#{Question.unanswered.count})"
    %li{role: 'unverified'}
      %a{href: '#'}
        Unverified
        = "(#{Question.unverified.count})"
    %li{role: 'flagged'}
      %a{href: '#'}
        Flagged
        = "(#{Question.flagged.count})"
    %li{role: 'suspect'}
      %a{href: '#'}
        Suspect
        = "(#{Question.suspect.count})"



  %h4 Questions
  .questions
    - @topic.questions.persisted.each do |question|
      .question
        %strong.title Q:
        = link_to(question.text, question)
    - if @topic.questions.persisted.empty?
      %br
      %h5 No questions have been asked yet.
