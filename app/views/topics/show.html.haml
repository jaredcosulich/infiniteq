.col-sm-12
  - if notice.present?
    %p#notice= notice

  %h3
    = @topic.title

  %h6= @topic.description

  .ask_a_question
    %h4 Ask A Question
    = form_for @question, html: {class: 'form-inline'} do |f|
      .form-group
        = f.text_field :text, class: 'form-control', placeholder: 'Your Question'
        = f.hidden_field :topic_id
        = f.submit 'Ask', class: 'btn btn-default'

  %h4 Questions
  .questions
    - @topic.questions.each do |question|
      - next if question.new_record?
      .question
        %p
          %strong Q:
          = link_to(question.text, question)
        .small
          = truncate(question.answers.first.text, length: 90)
