<p id="notice"><%= notice %></p>

<h1>Flags</h1>

<table>
  <thead>
    <tr>
      <th>Reason</th>
      <th>Question</th>
      <th>Answer</th>
      <th>User</th>
      <th>Trust</th>
      <th>Details</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @flags.each do |flag| %>
      <tr>
        <td><%= flag.reason %></td>
        <td><%= flag.question_id %></td>
        <td><%= flag.answer_id %></td>
        <td><%= flag.user_id %></td>
        <td><%= flag.trust %></td>
        <td><%= flag.details %></td>
        <td><%= link_to 'Show', flag %></td>
        <td><%= link_to 'Edit', edit_flag_path(flag) %></td>
        <td><%= link_to 'Destroy', flag, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Flag', new_flag_path %>
